# VAAS Configuration Template
# Copy this file to .env and customize for your environment

# =============================================================================
# Flask Application Settings
# =============================================================================
FLASK_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
FLASK_DEBUG=0
VAAS_HOST=0.0.0.0
VAAS_PORT=5001

# =============================================================================
# Application Settings
# =============================================================================
VAAS_THRESHOLD=0.85
VAAS_BASE_DIR=/app
VAAS_DATA_DIR=/app/data

# =============================================================================
# Database Configuration
# =============================================================================
# Supported: sqlite, mysql, postgresql, mssql
DB_TYPE=sqlite

# SQLite Configuration (used when DB_TYPE=sqlite)
SQLITE_FILE=/app/data/knowledge_base.db

# External Database Configuration (MySQL, PostgreSQL, SQL Server)
# Uncomment and configure if using external database
#DB_HOST=localhost
#DB_PORT=5432
#DB_NAME=vaasdb
#DB_USER=vaas_user
#DB_PASSWORD=your-secure-password

# Database Connection Settings
DB_SSL_ENABLED=false
DB_SSL_CA_CERT=
DB_SSL_MODE=require
DB_CONNECTION_TIMEOUT=30
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10

# SQL Server Specific
TRUST_SERVER_CERTIFICATE=false
AZURE_AD_AUTH=false

# =============================================================================
# Auto-Cleanup Settings
# =============================================================================
AUTO_CLEANUP_ENABLED=false
AUTO_CLEANUP_INTERVAL_DAYS=7
AUTO_CLEANUP_RETENTION_DAYS=30

# =============================================================================
# LDAP Authentication (Optional)
# =============================================================================
LDAP_ENABLED=false
#LDAP_HOST=ldap.example.com
#LDAP_PORT=389
#LDAP_USE_SSL=false
#LDAP_BASE_DN=DC=example,DC=com
#LDAP_SERVICE_USER=CN=Service Account,OU=Users,DC=example,DC=com
#LDAP_SERVICE_PASS=service-account-password
#LDAP_USER_FILTER=(sAMAccountName={username})
#LDAP_ADMIN_GROUP=CN=VAAS-Admins,OU=Groups,DC=example,DC=com
